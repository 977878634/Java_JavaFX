<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>

<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<BorderPane opacity="0.95" styleClass="canvas" xmlns="http://javafx.com/javafx/8.0.91"
			xmlns:fx="http://javafx.com/fxml/1" fx:controller="root.controller.Controller">
	
	
	<center>
		<VBox spacing="20" fx:id="center">
			
			<HBox alignment="CENTER">
				<Label text="新密码"></Label>
				<TextField fx:id="newPassword"></TextField>
			</HBox>
			
			<HBox alignment="CENTER">
				<Button fx:id="save" text="确认"></Button>
			</HBox>
		</VBox>
		
	</center>
	
	<stylesheets>
		<URL value="@../css/changePassword.css" />
	</stylesheets>
</BorderPane>
